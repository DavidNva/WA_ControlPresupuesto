@model TipoCuenta
@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<h1>Editar Tipo Cuenta: @Model.Nombre</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@* asp-controller="TiposCuentas podemos especificar en el form el controller al que pertenecen, como lo hicimos en la vista crear
    pero, para estos casos (incluso en la vista crear) podiamos omitir esto, dado que estamos en la vista que pertenen a la carpeta TiposCuentas
    Es decir, es el controller
" *@
<form  asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" id="Nombre" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
