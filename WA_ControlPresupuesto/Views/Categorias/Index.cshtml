@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Categorias";
}
<h1>@ViewData["Title"]</h1>
<h5>La categoria nos permite indicar en qué gastamso nuestro dinero, 
    también, de dónde provienen nuestros ingresos.
</h5>
<a asp-action="Crear" class="btn btn-primary mb-3">Crear Nuevo</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Nombre</td>
                <td>
                    @categoria.TipoOperacionId.ToString()
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Borrar" asp-route-id="@categoria.Id" class="btn btn-danger">Borrar</a>
                </td>     
            </tr>

         }
    </tbody>
</table>
